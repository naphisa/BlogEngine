@using BlogEngine.Models
@{
    ViewBag.Title = "Index";
}

<h3>Welcome to cyberblog!!!</h3>
@using (var crx = new ApplicationDbContext())
{
    foreach(var blog in crx.Blogs)
    {
        <div class="panel panel-body">
            <h3>@blog.Title</h3>
            <p>Author | @blog.Authur</p>
            <a href="@Url.Action("Generic", "Blog",new { @id=blog.Id })">Read More...</a>
        </div>
        
    }
}
